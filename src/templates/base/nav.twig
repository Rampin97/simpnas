{% set menuList = [
    {title: '', links: [
        {icon: 'home', name: 'Dashboard', url: 'dashboard'},
        {icon: 'file', name: 'File Manager', url: 'fileManager'}
    ]},
    {title: 'Storage', links: [
        {icon: 'hard-drive', name: 'Disks', url: ''},
        {icon: 'database', name: 'Volumes', url: ''}
    ]},
    {title: 'Users and Shares', links: [
        {icon: 'user', name: 'Users', url: ''},
        {icon: 'users', name: 'Groups', url: ''},
        {icon: 'folder', name: 'Shares', url: ''}
    ]},
    {title: 'Settings', links: [
        {icon: 'clock', name: 'Date & Time', url: ''},
        {icon: 'globe', name: 'Network', url: ''}
    ]},
    {title: 'Maintenance', links: [
        {icon: 'download', name: 'Updates', url: ''},
        {icon: 'package', name: 'Apps', url: ''},
        {icon: 'book', name: 'Logs', url: ''},
        {icon: 'power', name: 'Power', url: ''}
    ]}
] %}

<nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
    <div class="position-sticky pt-3">
        {% for ml in menuList %}
            {% if ml['title']|length > 0 %}
                <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                    <span>{{ ml['title'] }}</span>
                </h6>
            {% endif %}
            <ul class="nav flex-column mb-2">
                {% for link in ml['links'] %}
                    <li class="nav-item">
                        <a class="{{ (link['url']|length > 0 and is_current_url(link['url'])) ? 'nav-link active' : 'nav-link' }}" href="{{ (link['url']|length > 0 ? full_url_for(link['url']) : '#')|e('html_attr') }}">
                            <span data-feather="{{ link['icon']|e('html_attr') }}"></span>
                            {{ link['name'] }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endfor %}
    </div>
</nav>
