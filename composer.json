{
    "name": "rampin97/simpnas",
    "description": "Simple Network Attached Storage System for your home or small business",
    "authors": [
        {
            "name": "Daniele"
        }
    ],
    "type": "project",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Simpnas\\": "src/Simpnas"
        }
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-json": "*",
        "k-ko/slim-twig-flash": "^2.0",
        "php-di/php-di": "^6.3",
        "php-di/slim-bridge": "^3.2",
        "phpmailer/phpmailer": "^6.5",
        "slim/flash": "^0.4.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.9",
        "slim/twig-view": "^3.0",
        "twig/twig": "^3.0"
    },
    "config": {
        "process-timeout" : 0,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest"
    },
    "scripts": {
        "server": "export SIMPNAS_CACHE=\"false\"; php -S localhost:8888 src/public/index.php"
    }
}
